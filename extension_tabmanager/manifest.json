{
  "manifest_version": 3,
  "name": "Tab Manager",
  "version": "0.5.0",
  "description": "Organize, merge, and split tabs between windows.",
  "permissions": ["tabs", "windows", "storage", "favicon"],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "action": {
    "default_icon": {
      "16": "src/assets/images/icon16.png",
      "32": "src/assets/images/icon32.png",
      "48": "src/assets/images/icon48.png",
      "128": "src/assets/images/icon128.png"
    }
  },
  "icons": {
    "16": "src/assets/images/icon16.png",
    "128": "src/assets/images/icon128.png"
  },
  "options_page": "src/pages/options/options.html"
}